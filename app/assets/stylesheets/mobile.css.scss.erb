@media (max-device-width: 800px) {

  body {
    background: url('/assets/clouds.png') no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
  }
  .nav, .scene, #before-uchicago, .background, #uchicago,.horizontal, #me, .freeSpace, #frame, #daytonight {
  display: none;
}
.scene {
  display: none;
}
h1 {
  font-weight: normal;
  font-size: 6em;
}
.mobile-view {
display: block !important;
text-align: center;
color: #000;
position: relative;
z-index: 99;
}
  .title {
    text-align: center;
    max-width: none !important;
  }
  .header {
    font-size: 6em;
  }
  .subheader {
    font-size: 5.4em;
  }
  .lead {
    font-size: 4em;
  }
  .main
   {
   margin: 1em;
   float: none !important;
  }

}
