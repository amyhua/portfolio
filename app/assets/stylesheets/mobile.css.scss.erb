@media (max-width: 800px) {

  body {
    background: url('/assets/clouds.png') no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
  }

  .title {
    text-align: center;
    max-width: none !important;
  }
  .header {
    font-size: 36px;
  }
  .subheader {
    font-size: 24px;
  }
  .lead {
    font-size: 18px;
  }
  h1 {
    font-size: 24px;
  }
  .main
   {
   margin: 1em;
   float: none !important;
  }

  /* Images */

  #balloon img {
    width: 142px;
    padding-left: 50%;
  }
  #balloon {
    padding: 0;
  }

}
