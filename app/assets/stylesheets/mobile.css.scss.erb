@media (max-device-width: 800px) {

  body {
    background: url('/assets/clouds.png') no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
  }
  .nav, .scene, #before-uchicago, #uchicago,.horizontal, #me, .freeSpace, #frame, #daytonight {
  display: none;
}
.scene {
  display: none;
}

.mobile-view {
display: block !important;
text-align: center;
color: #000;
position: relative;
z-index: 99;
}
  .title {
    text-align: center;
    max-width: none !important;
  }
  .header {
    font-size: 2em;
  }
  .subheader {
    font-size: 1.7em;
  }
  .lead {
    font-size: 1.5em;
  }
  h1 {
    font-size: 1.7em;
  }
  .main
   {
   margin: 1em;
   float: none !important;
  }

  /* Images */

  #balloon img {
    width: 142px;
    padding-left: 50%;
  }
  #balloon {
    padding: 0;
  }

}
