/* Background Images */

.background {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    min-width: 800px;
    z-index: 0;
}
.full-scale {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    overflow: auto;
}

#frame {
    z-index: 100;
}
#balloon {
    padding-top: 25em;
    padding-bottom: 1em;
    padding-left: 1em;
}

.has-tags{
    position:relative;
    z-index: 60;
}
.balloon-tags.left {
    text-align: right;
    width: 80px;
    left: -6px;
    bottom: 155px;
}
.balloon-tags {
    position: relative;
}
.balloon-tags li {
    padding: 2px;
    background-color: #FDFCDC;
    margin-bottom: 29px;
    color: #747474;
    padding-left: 7px;
    padding-right: 7px;
}
.balloon-tags.left li {
    padding-right: 18px;
}
.balloon-tags.right {
    position: relative;
    bottom: 327px;
    left: 74px;
    width: 75px;
}

#balloon-3 {
    position: relative;
    top: 96px;
    z-index: 60;
}
#balloon-3 .balloon-tags li {
    font-size: 1.8em;
    padding: 0.1em;
}
#balloon-3 .balloon-tags {
    width: 10em;
}
#balloon-3 .balloon-tags.left {
    left: -4em;
    bottom: 114px;
}
#balloon-3 .balloon-tags.right {
    left: 99px;
    bottom: 346px;
}
#balloon-3 .balloon-tags.left li {
    padding-right: 10px;
}
#balloon-3 .balloon-tags.right li {
    padding-left: 10px;
}


