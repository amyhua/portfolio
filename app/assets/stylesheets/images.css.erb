/* BACKGROUND */

#window-view {
    background-size: 100% 100%;
    background-repeat: no-repeat;
}

.clouds {
    background-image: url('<%= asset_path 'clouds.png' %>');
}
.uchicago {
    background-image: url('<%= asset_path 'uchicago.png' %>');
}
.seattle {
    background-image: url('<%= asset_path 'seattle.png' %>');
}

/* OVERLAYS */
#balloon {
    padding-top: 15em;
    padding-bottom: 2em;
}

#available-sign{
    position:relative;
    left: -139px;
    top: 38px;
}
.has-tags{
    position:relative;
    z-index: 60;
}
.balloon-tags.left {
    text-align: right;
    width: 80px;
    left: -6px;
    bottom: 155px;
}
.balloon-tags {
    position: relative;
}
.balloon-tags li {
    padding: 2px;
    background-color: #FDFCDC;
    margin-bottom: 29px;
    color: #747474;
    opacity: 0.75;
    padding-left: 7px;
    padding-right: 7px;
}
.balloon-tags.left li {
    padding-right: 18px;
}
.balloon-tags.right {
    position: relative;
    bottom: 327px;
    left: 74px;
    width: 75px;
}

#balloon-3 {
    position: relative;
    top: 98px;
    z-index: 60;
}
#balloon-3 .balloon-tags li {
    font-size: 1.8em;
    padding: 0.1em;
}
#balloon-3 .balloon-tags {
    width: 10em;
}
#balloon-3 .balloon-tags.left {
    left: -4em;
    bottom: 114px;
}
#balloon-3 .balloon-tags.right {
    left: 99px;
    bottom: 346px;
}
#balloon-3 .balloon-tags.left li {
    padding-right: 10px;
}
#balloon-3 .balloon-tags.right li {
    padding-left: 10px;
}


/* Smaller skills balloon */
#balloon-2{
    position: relative;
    right: -10em;
    top: 11em;
    z-index: 55;
}

/* About */

.desk-item {
    position: fixed;
    bottom: 9%;
    z-index: 600;
}

#me {
    left: 53%;
}

