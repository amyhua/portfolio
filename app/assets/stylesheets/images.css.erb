/* BACKGROUND */

#window-view {
    background-size: 100% 100%;
    background-repeat: no-repeat;
}

.clouds {
    background-image: url('<%= asset_path 'clouds.png' %>');
}
.uchicago {
    background-image: url('<%= asset_path 'uchicago.png' %>');
}
.seattle {
    background-image: url('<%= asset_path 'seattle.png' %>');
}

/* OVERLAYS */
#balloon {
    padding-top: 15em;
    padding-bottom: 2em;
}

#available-sign{
    position:relative;
    left: -139px;
    top: 38px;
}
.has-tags{
    position:relative;
    z-index: 60;
}
.balloon-tags.left {
    text-align: right;
    width: 80px;
    left: -6px;
    bottom: 155px;
}
.balloon-tags {
    position: relative;
}
.balloon-tags li {
    padding: 2px;
    background-color: #FDFCDC;
    margin-bottom: 29px;
