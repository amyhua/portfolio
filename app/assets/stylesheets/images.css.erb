    padding-left: 7px;
    padding-right: 7px;
}
.balloon-tags.left li {
    padding-right: 18px;
}
.balloon-tags.right {
    position: relative;
    bottom: 327px;
    left: 74px;
    width: 75px;
}

#balloon-3 {
    position: relative;
    top: 98px;
    z-index: 60;
}
#balloon-3 .balloon-tags li {
    font-size: 1.8em;
    padding: 0.1em;
}
#balloon-3 .balloon-tags {
    width: 10em;
}
#balloon-3 .balloon-tags.left {
    left: -4em;
    bottom: 114px;
}
#balloon-3 .balloon-tags.right {
    left: 99px;
    bottom: 346px;
}
#balloon-3 .balloon-tags.left li {
    padding-right: 10px;
}
#balloon-3 .balloon-tags.right li {
    padding-left: 10px;
