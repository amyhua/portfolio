.wrapper, .subwrap, .background, .horizontal, .transition-background {
    max-width: 1500px !important;
    margin: auto;
}
.mobile-view {
    display: none;
}
.horizontal {
    margin: 0;
}
.pink {
    color: #FF00AD;
}
@font-face{
    font-family: 'Quicksand';
    src: url('<%= asset_path "Quicksand_Dash.otf" %>') format("opentype");
}
@font-face{
    font-family: 'Colaborate';
    src: url('<%= asset_path "ColabThi.otf" %>') format("opentype");
}
body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    font-family: Colaborate, Trebuchet MS, Arial;
    background-image: url('<%= asset_path 'tile.png'%>');
}
h1 {
    color: #FF00AD;
}
.header {
    color: #8B1D5B;
    font-size: 4em;
    font-family: Quicksand;
    font-weight: bold;
}

.subheader {
    color: white;
    font-size: 2em;
    font-family: Quicksand;
}
ul {
    padding: 0;
    list-style: none outside none;
    width: 100%;
}
li {
    padding: 0;
    position: relative;
    overflow: hidden;
}
.lead {
    font-size: 1.2em;
}
.title {
    padding: 20px;
    max-width: 26em;
    background-color: rgba(105, 105, 105, 0.25); /* TODO: SEO into Title Tag */
}


.two-column li {
    width: 49%;
    float: left;
}

.clearfix {
    *zoom: 1;
    &:before,
    &:after {
        display: table;
        content: "";
        // Fixes Opera/contenteditable bug:
        // http://nicolasgallagher.com/micro-clearfix-hack/#comment-36952
        line-height: 0;
    }
    &:after {
        clear: both;
    }
}

.no-padding {
    padding: 0;
    margin: 0;
}
.hide-this {
    display: none;
}

/* SECTION */
.headline {
    display: inline;
    color: #FF00AD;
}

a{
    color: #FF00AD;
}
