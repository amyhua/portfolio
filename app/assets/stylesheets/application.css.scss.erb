@font-face{
    font-family: 'Quicksand';
    src: url('<%= asset_path "Quicksand_Dash.otf" %>') format("opentype");
}
@font-face{
    font-family: 'Colaborate';
    src: url('<%= asset_path "ColabThi.otf" %>') format("opentype");
}
body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    font-family: Colaborate;
}
h1 {
    color: #FF00AD;
}
.header {
    color: #8B1D5B;
    font-size: 4em;
    font-family: Quicksand;
    font-weight: bold;
}

.subheader {
    color: white;
    font-size: 2em;
    font-family: Quicksand;
}
ul {
    padding: 0;
    list-style: none outside none;
    width: 100%;
}
li {
    padding: 0;
    position: relative;
    overflow: hidden;
}
.lead {
    font-size: 1.5em;
}
.nav {
    font-family: Quicksand;
    font-size: 2.4em;
    position: fixed;
    bottom: 4px;
    left: 42%;
    text-align: right;
    z-index: 9999;
}
.nav li{
    float: left;
    margin-right: 2em;
    display: block;
    position: relative;
    bottom: -5px;
}
.nav li > a {
    text-decoration: none;
    color: #F0C;
    font-weight: bold;
    display: block;
}
.nav li > a:hover {
    color: #9C2B86;
}
.nav li:hover {
    position: relative;
    bottom: 10px;
}

.two-column li {
    width: 49%;
    float: left;
}

.clearfix {
    *zoom: 1;
    &:before,
    &:after {
        display: table;
        content: "";
        // Fixes Opera/contenteditable bug:
        // http://nicolasgallagher.com/micro-clearfix-hack/#comment-36952
        line-height: 0;
    }
    &:after {
        clear: both;
    }
}